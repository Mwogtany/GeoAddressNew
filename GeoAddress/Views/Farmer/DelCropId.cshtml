@model GeoAddress.Models.FarmerCropViewModel
<h2>ARE YOU SURE YOU WANT TO DELETE THIS CROP?</h2>
@using (Ajax.BeginForm("DeleteCrop", "Farmer", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "result" }))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.BaseID)
        @Html.LabelFor(model => model.CropID, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.CropID, Model.Crops, "--Select--", new { @id = "ddlCrops", @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.CropID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Acreage, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Acreage, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Acreage, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Purpose, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Purpose, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Purpose, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WaterSourceID, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.WaterSourceID, Model.WaterSource, "--Select--", new { @id = "ddlWaters", @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.WaterSourceID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Seeds, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Seeds, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Seeds, "", new { @class = "text-danger" })
        </div>
    </div>

    <button type="submit" class="btn btn-default">DELETE</button>
}

<div id="result"></div>
